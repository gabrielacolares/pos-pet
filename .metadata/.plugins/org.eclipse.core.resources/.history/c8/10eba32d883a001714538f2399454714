						<f:setPropertyActionListener value="#{cliente}"
							target="#{clienteMB.cliente}" />
					</p:commandLink>

					<h:outputText value="   " />
					
					<p:commandLink action="#{clienteMB.desativar}">
						<p:graphicImage url="#{cliente.situacaoCliente == 'ADIPLENTE' ? '/resources/img/glyphicons_152_check.png' : '/resources/img/glyphicons_153_unchecked.png'}"
							title="#{cliente.situacaoCliente == 'ADIPLENTE' ? 'Desativar' : 'Ativar'}" />
						<f:setPropertyActionListener value="#{cliente}"
							target="#{clienteMB.cliente}" />
